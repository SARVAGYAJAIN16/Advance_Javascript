// Javascript get time method / getting components.

const currentTime= new Date();
// hours
const hours = currentTime.getHours();
console.log(hours);  // output 12 (our time is 12:26pm)
// minutes
const minutes = currentTime.getMinutes();
console.log(minutes);// 29 
// seconds
const seconds = currentTime.getSeconds();
console.log(seconds);// 7
// getTime
const time =currentTime.getTime();
console.log(time); //1742799669199 in ms coming from 1970.
 

// Javascript set time method / getting components:

const date = new Date();
// set hours 
date.setHours(10);
console.log(date); // 2025-03-24T05:13:15.370Z
// in console it will see right..

//  seconds 
date.setSeconds(34);
console.log(date); // 2025-03-24T05:19:34.451Z

//  milliseconds
date.setMilliseconds(500);
console.log(date); // 2025-03-24T05:21:34.500Z 
// it will not see here... 

// setTime (timeValue)
date.setTime(1632090690883);
console.log(date); // output 2021-09-19T22:31:30.883Z



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <button id="addBtn">Add data to local storage</button>
        <button id="getBtn">Get data to local storage</button>
        <button id="removeBtn">Remove data to local storage</button>
    </div>
<script>
    // object we have created....
    // curly bracket we use it is object. and in js everything is object.
    // this object we have to add in local storage...
    const studentBioData ={
        firstName: "Sarvagya",
        lastName:"Jain",
        age:20,
        gender:"male",
        grade:"A",
        courses:["Math","science","english"],
        address: {
            street: '123 main st',
            city:"Cityville",
            state: "state",
            zipCode: "12345",
        },
    };
                                                                                           //key            value
     const addTodoList = () => { // key ,value
       // localStorage.setItem("objectData", studentBioData);// output (in application) -> objectData   [object Object] 
      // localStorage.setItem("objectData", "studentBioData"); // output                  -> objectData   studentBioData  
      // so we have to convert with the help of stringify (these data we convert in string)
      localStorage.setItem("objectData",JSON.stringify(studentBioData)); // so we get key and value
    };
    // get from local storage
     const getTodoList = () =>  {
        const retrivedStudentData =JSON.parse(
            localStorage.getItem("objectData") // so in output we get in from of object(original form) 
            // .parse convert JSON file to again in object.
        )
        console.log("retrived from local storage: ", retrivedStudentData);
     };
      // remove data
     const removeTodoList = () => {
        const removedData = localStorage.removeItem("objectData");
        // verify removal
        console.log("data after removal :", removedData);
     };



    document.getElementById("addBtn").addEventListener("click",() => {
       addTodoList();
    });
    document.getElementById("getBtn").addEventListener("click",() => {
      getTodoList();
    });
    document.getElementById("removeBtn").addEventListener("click",() => {
      removeTodoList();
    });
</script>
</body>
</html>

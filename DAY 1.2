<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            display:flex;
            justify-content: center;
            align-items: center;
            height:100vh;
        }
        .rectangle {
            width:35rem;
            height:35rem;
            background: black;
            border-radius:1rem;
            margin-bottom:3.2rem;
            transition: all 0.6s linear;
            box-shadow: rgba(239,247,87,0.2) 0px 8px 24px;
        }
        .addTransition{
            border-radius:50%;
        }

    </style>
</head>
<body>
    <section>
        <div class= "rectangle"></div>
        <button id ="myButton">Clickme</button>
    </section>
    <script>
        // get the element by its id.
        let myButton = document.getElementById("myButton");
        let rectDiv =  document.querySelector(".rectangle");
        // defining function 
        const  handleMouseEvent =() => {
            console.log("click");
            rectDiv.style.backgroundColor ="#f5ee62";
        };
        const handleMouseEvent2 =() => {
            console.log("dblclick");
            rectDiv.classList.add("addTransition");
        };

        // attach the handclick function to the click event of the button
      //  myButton.addEventListener("click", handleMouseEvent)// we will call function here
        // or (both are same)
        myButton.addEventListener("click",() => {
           handleMouseEvent();
        });
        myButton.addEventListener("dblclick",() => {
            handleMouseEvent2();
        });
 
    </script>
</body>
</html>
